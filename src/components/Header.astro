---
import { SITE_TITLE, GLITCH_TEXT, AVATAR } from '../const.ts';
const { isHomePage } = Astro.props;
---

<header class="site-header" class:list={[{ 'is-homepage': isHomePage }]}>
	<div class="site-branding">
		<div class="site-title">
			<a href="/">{SITE_TITLE}</a>
		</div>
	</div>
	<div class="searchbox">
		<i class="iconfont icon-search"></i>
	</div>
	<div id="show-nav" class="show-nav">
		<div class="line line1"></div>
		<div class="line line2"></div>
		<div class="line line3"></div>
	</div>
	<div class="site-nav-toggle">
		<div class="icon"></div>
	</div>
	<div id="close-menu" class="menu-mask"></div>
	<nav class="navbar ">
		<div class="avatar">
			<img src={AVATAR} alt="" />
		</div>
		<p class="glitch-text">{GLITCH_TEXT}</p>
		<form class="m-search-form" method="get" action="/search/"> 
			<input class="m-search-input" type="search" name="q" placeholder="搜索..." required="">
		</form>
		<ul id="menu-menu-1" class="menu">
			<li class="menu-item">
				<a data-pjax href="/" target="_self">
					<span class="faa-parent animated-hover">
						<i class="iconify faa-pulse" data-icon="ep:house"></i>
						首页
					</span>
				</a>
			</li>
			<li class="menu-item">
				<a data-pjax href="/categories" target="_self">
					<span class="faa-parent animated-hover">
						<i class="iconify faa-wrench" data-icon="ep:menu"></i>
						分类
					</span>
				</a>
			</li>
			<li class="menu-item">
				<a data-pjax href="/tags" target="_self">
					<span class="faa-parent animated-hover">
						<i class="iconify faa-tada" data-icon="ep:collection-tag"></i>
						标签
					</span>
				</a>
			</li>
			<li class="menu-item">
				<a data-pjax href="/archives" target="_self">
					<span class="faa-parent animated-hover">
						<i class="iconify faa-shake" data-icon="ep:moon"></i>
						归档
					</span>
				</a>
			</li>
			<li class="menu-item">
				<a ata-pjax href="/about" target="_self">
					<span class="faa-parent animated-hover">
						<i class="iconify faa-vertical" data-icon="ep:ice-cream"></i>
						关于
					</span>
				</a>
			</li>
		</ul>
		<p class="nav-footer">© 2024 {SITE_TITLE}</p>
	</nav>
</header>
<style is:global>
	.site-header {
		position: sticky;
		top: -4.6875rem;
		height: 4.6875rem;
		height: var(--header-height);
		width: 100%;
		padding: 0 1.25rem;
    box-sizing: border-box; 
		transition: all .4s ease;
		z-index: 100;
	}
	
	.site-header.is-homepage {
		position: fixed;
		top: 0;
	}

	.site-header.is-homepage:hover {
		background: var(--header-background);
	}
	
	.site-header.yya {
		background: var(--header-background);
		box-shadow: 0 1px 40px -8px #00000080;
	}

	.site-header.yya.sabit:not(.is-homepage) {
		top: 0;
	}

	.site-branding {
		float: left;
	}

	.site-branding .site-title {
		margin: 0;
		height: 4.6875rem;
		height: var(--header-height);
		line-height: 4.6875rem;
		line-height: var(--header-height);
	}

	.site-branding .site-title a {
		opacity: .75;
		color: #464646;
    color: var(--body-color);
		font-size: 2rem;
    font-weight: 400;
	}

	.site-branding .site-title a:hover {
		color: orange;
		color: var(--theme-color)
	}

	.searchbox {
		float: right;
		height: 4.6875rem;
		height: var(--header-height);
		line-height: 4.6875rem;
		margin-left: 1.25rem;
	}

	.searchbox i {
		color: #464646;
    color: var(--body-color);
		font-size: 1.875rem;
    cursor: pointer;

	}

	.searchbox i:hover {
		color: orange;
		color: var(--theme-color)
	}

	.show-nav {
		float: right;
		position: relative;
		width: 30px;
		height: 33px;
		margin-left: 20px;
		margin-top: 20px;
		cursor: pointer;

	}

	.show-nav .line {
    position: absolute;
    width: 28px;
    height: 2px;
    top: 7px;
    background: #666;
    background: var(--body-color);
    -webkit-transition: all .2s ease;
  }

  .show-nav .line1 {
    top: 16px;
  }

  .show-nav .line3 {
    top: 25px;
  }

  .show-nav.hide .line1 {
    -webkit-transform: rotateZ(45deg);
  }

  .show-nav.hide .line2 {
    opacity: 0;;
  }

  .show-nav.hide .line3 {
    top: 16px;
    -webkit-transform: rotateZ(-45deg);
  }

	.site-nav-toggle {
		display: none;
	}

	.m-search-form {
		display: none;
	}

	.menu-mask {
		display: none;
		width: 100%;
		height: 100%;
		position: fixed;
		background-color: #0006;
		z-index: 200;
	}

	.navbar {
		width: 100%;
		height: 100%;
		position: absolute;
		left: 0;
		pointer-events: none;
		display: none;
		justify-content: center;
	}

	.site-header.is-homepage:hover .navbar.show {
		display: flex;
	}

	.site-header:not(.is-homepage) .navbar.show {
		display: flex;
	}

	.site-header.yya .navbar.show {
		display: flex;
	}

	.avatar {
		display: none;
	}

	.glitch-text {
		display: none;
	}

	.menu {
		height: 100%;
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		pointer-events: auto;
		animation: fadeInRight 1s;
	}

	.menu-item {
		padding: 0 0.875rem;
		position: relative;
	}

	.menu-item a {
		color: #666;
    color: var(--color);
		white-space: nowrap;
		display: inline-block;
		padding: 10px 0;
		position: relative;
	}

	.menu-item a:hover {
		color: orange;
		color: var(--theme-color)
	}

	.menu-item a:after {
		content: "";
		display: block;
		position: absolute;
		bottom: -1rem;
		height: 6px;
		background-color: orange;
		background-color: var(--theme-color);
		width: 100%;
		max-width: 0;
		transition: max-width .25s ease-in-out
	}

	.menu-item a:hover:after {
		max-width: 100%;
	}

	.nav-footer {
		display: none;
	}

	@media (max-width: 768px) {
		.site-header {
			position: absolute;
			top: 0;
			height: 50px;	
			padding: 0;
		}

		.site-header.is-homepage {
			position: fixed;
		}

		.site-header:hover {
			background: transparent;
		}

		.site-branding {
			float: right;
			margin-right: 10px;
		}

		.site-branding .site-title {
			height: 50px;
			line-height: 50px;
		}

		.site-branding .site-title a {
			font-size: 20px;
		}

		.searchbox {
			display: none;
		}

		.show-nav {
			display: none;
		}

		.site-nav-toggle {
			display: block;
			width: 50px;
			height: 50px;
			position: relative;
		}

		.site-nav-toggle .icon {
			width: 30px;
			height: 3px;
			background-color: orange;
			background-color: var(--mobile-nav-toggle-background-color);
			position: absolute;
			top: 24px;
			left: 10px;
			transition-duration: .2s;
		}

		.site-nav-toggle .icon:before,
		.site-nav-toggle .icon:after {
			content: "";
			display: block;
			width: 30px;
			height: 3px;
			background-color: orange;
			background-color: var(--mobile-nav-toggle-background-color);
			position: absolute;
			transition-duration: .2s;
		}

		.site-nav-toggle .icon:before {
			top: 10px;
		}

		.site-nav-toggle .icon:after {
			bottom: 10px;
		}

		.site-header.open .site-nav-toggle {
			position: absolute;
			z-index: 999;	
			left: 15.625rem;
		}

		.site-header.open .site-nav-toggle .icon {
			background-color: transparent;
		}

		.site-header.open .site-nav-toggle .icon:before {
			top: 0;
			transform: rotate(-45deg);
    	-webkit-transform: rotate(-45deg);
		}

		.site-header.open .site-nav-toggle .icon:after {
			top: 0;
			transform: rotate(45deg);
    	-webkit-transform: rotate(45deg);
		}

		.site-header.open .menu-mask {
			display: block;
		}

		.navbar {
			width: 15.625rem;
			height: 100%;
			display: flex;
			flex-direction: column;
			align-items: center;
			overflow: hidden;
			position: fixed;
			top: 0;
			left: -15.625rem;
			background-color: #fff;
    	background-color: var(--background-color);
			z-index: 999;
			pointer-events: auto;
			transition: all .5s
		}

		.site-header.open .navbar {
			left: 0;
		}

		.avatar {
			padding: 30px 0;
			display: flex;
			justify-content: center;
		}

		.glitch-text {
			display: block;
			text-align: center;
			color: #333;
			color: var(--mobile-menu-text-color);
			font-weight: 900;
			font-family: Ubuntu,sans-serif;
			letter-spacing: 1.5px
		}
	
		.avatar img {
			width: 5.625rem;
			height: 5.625rem;
			border-radius: 100%;
			-o-object-fit: cover;
			object-fit: cover
		}

		.m-search-form {
			display: block;
			position: relative;
			box-sizing: border-box;
			width: 100%;
			padding: 8px 15px;
			margin-bottom: 20px;
			/* background-color: #fafafa; */
			background-color: var(--background-color);
		}

		.m-search-form .m-search-input {
			width: 100%;
			border: 0;
			padding: 5px;
			text-align: center;
			border-radius: 3px;
			outline: none;
			color: var(--mobile-menu-text-color);
			background-color: inherit;
		}

		.menu {
			width: 100%;
			flex-direction: column;
			justify-content: flex-start;
			overflow-x: hidden;
    	overflow-y: auto;
		}

		.menu .menu-item {
			padding: 8px 0;
			display: flex;
		}
		
		.menu .menu-item a {
			padding: 0;
			color: #333;
    	color: var(--mobile-menu-text-color);
			font-size: 1rem;
			width: 4.375rem;
			letter-spacing: .02em;
		}

		.menu .menu-item a:hover {
			cursor: pointer;
			color: orange;
			color: var(--theme-color)
		}

		.menu .menu-item a:hover:after {
			display: none;
		}

		.nav-footer {
			width: 100%;
			display: block;
			text-align: center;
			font-size: .875rem;
			color: #b0b0b0;
		}
	}

	@keyframes fadeInRight {
    0% {
			opacity: 0;
			transform: translate(30px)
    }

    to {
			opacity: 1;
			transform: translate(0)
    }
  }

  @keyframes fadeInUp {
    0% {
			opacity: 0;
			-webkit-transform: translateY(10px)
    }

    to {
			opacity: 1;
			-webkit-transform: translateY(0)
    }
  }
</style>
