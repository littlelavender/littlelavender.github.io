---
const { image, heading } = Astro.props;
const hasImage = !!image;
---

<div class="single-page-header">
  <div class="page-header" class:list={{'is-decorate': hasImage}}>
    {hasImage && 
      <div class="pattern-background">
        <img 
          src={image} 
          alt=""
          width="1920" 
          height="400"
          class="lazyloaded" 
        />
      </div>
    }
    <div class="pattern-title">
      <h1>{heading}</h1>
    </div>
  </div>
</div>
<style is:global>
  .page-header {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 0 3rem;
  }

  .page-header .pattern-title {
    max-width: 780px;
    position: relative;
    color: #464646;
    color: var(--body-color)
  }
  
  .page-header .pattern-title h1 {
    width: 100%;
    margin: 0;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 300
  }

  .page-header .pattern-title h1:before,
  .page-header .pattern-title h1:after {
    color: orange;
    color: var(--theme-color);
    font-size: 1.5em;
    vertical-align: sub
  }

  .page-header .pattern-title h1:before {
    content: "{"
  }

  .page-header .pattern-title h1:after {
    content: "}"
  }

  .page-header.is-decorate {
    padding: 0;
  }

  .page-header.is-decorate .pattern-background {
    position: relative;
    width: 100%;
    height: 400px;
  }

  .page-header.is-decorate .pattern-background:before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #0000004d;
    z-index: 1;
  }

  .page-header.is-decorate .pattern-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
  }

  .page-header.is-decorate .pattern-title {
    position: absolute;
    text-shadow: 2px 2px 10px #000;
    z-index: 1;
  }

  .page-header.is-decorate .pattern-title h1 {
    font-size: 2rem;
    color: #fff;
    font-weight: 500;
  }

  .page-header.is-decorate .pattern-title h1:before,
  .page-header.is-decorate .pattern-title h1:after {
    content: "";
  }

  @media (max-width: 768px) {
    .page-header {
      padding: 50px 0 0;
    }

    .page-header.is-decorate .pattern-background {
      height: 17.5rem;
      overflow: hidden;
    }

    .single-page-header .page-header.is-decorate .pattern-background:after {
      content: "";
      width: 150%;
      height: 4.375rem;
      background: #fff;
      background: var(--background-color);
      left: -25%;
      bottom: -2.875rem;
      border-radius: 100%;
      position: absolute;
      z-index: 1;
    }
  }
</style>