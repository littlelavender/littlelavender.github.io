---
import BaseHead from '../components/BaseHead.astro';
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
		<BaseHead />
    <style is:global>
      .error-404 {
        width: 100%;
        height: 100%;
        position: absolute;
      }

      .error-img {
        height: 88%;
      }

      .anim-icon {
        height: 100%;
      }

      .error-img,
      .err-button {
        text-align: center;
      }
    
      .err-button.back a {
        padding: 10px 30px;
        margin: 0 10px;
        border: 1px solid orange;
        border: 1px solid var(--theme-color);
        color: orange;
        color: var(--theme-color);
        border-radius: 50px;
      }
    
      .err-button.back a.gohome {
        background: orange;
        background: var(--theme-color);
        color: #fff;
      }
    
      .err-button.back a:hover {
        box-shadow: 0 0 4px orange;
        box-shadow: 0 0 4px var(--theme-color);
      }
    </style>
	</head>
	<body class="serif error404">
		<div class="error-404">
      <div class="error-img">
        <div class="anim-icon" id="404"></div>
      </div>
      <div class="err-button back">
        <a id="golast" href="javascript:history.go(-1);" data-i18n="notfound.golast" i18n-options="{&quot;clone&quot;:{}}">返回上一页</a>
        <a id="gohome" href="/" class="gohome" data-i18n="notfound.gohome" i18n-options="{&quot;clone&quot;:{}}">返回主页</a>
      </div>
    </div>
    <script is:inline>
      var the_dom = window.location.hostname;
    </script>
    <script src="/theme-sakura/assets/js/404.js" type="text/javascript"></script>
  </body>
</html>
